# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# Your GCP Project ID (required)
project_id = "your-gcp-project-id"

# Region and Zone (optional, defaults shown)
region = "us-central1"
zone   = "us-central1-a"

# Number of VMs to create
# 1 = Single VM (FREE tier - all services on one VM)
# 4 = Load balancer + 2 web servers + app server
# 5 = Full setup (adds Jenkins VM)
vm_count = 1

# VM Configuration (optimized for free tier)
vm_machine_type = "e2-micro"  # Free tier eligible
vm_disk_size    = 30          # Free tier: 30GB
vm_disk_type    = "pd-standard"

# SSH Configuration
ssh_user            = "devops"
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# VM Tags
vm_tags = ["automation-alchemy"]

# Enable monitoring
enable_monitoring = true

