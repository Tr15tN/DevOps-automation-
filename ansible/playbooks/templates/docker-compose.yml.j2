services:
  app-server:
{% if app_server_image is defined %}
    image: {{ app_server_image }}
{% else %}
    build:
      context: ./docker/app-server
{% endif %}
    container_name: app-server
    environment:
      - NODE_ENV=production
      - PORT=3000
    ports:
      - "3000:3000"
    networks:
      - app-net
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/health"]
      interval: 10s
      timeout: 3s
      retries: 5

  web-server-1:
    image: nginx:1.25-alpine
    container_name: web-server-1
    volumes:
      - ./configs/nginx/nginx1.conf:/etc/nginx/nginx.conf:ro
      - ./web-content:/usr/share/nginx/html:ro
    depends_on:
      - app-server
    networks:
      - app-net
    ports:
      - "8081:80"
    healthcheck:
      test: ["CMD", "sh", "-c", "test -f /var/run/nginx.pid && kill -0 $(cat /var/run/nginx.pid)"]
      interval: 10s
      timeout: 3s
      retries: 3
      start_period: 10s

  web-server-2:
    image: nginx:1.25-alpine
    container_name: web-server-2
    volumes:
      - ./configs/nginx/nginx2.conf:/etc/nginx/nginx.conf:ro
      - ./web-content:/usr/share/nginx/html:ro
    depends_on:
      - app-server
    networks:
      - app-net
    ports:
      - "8082:80"
    healthcheck:
      test: ["CMD", "sh", "-c", "test -f /var/run/nginx.pid && kill -0 $(cat /var/run/nginx.pid)"]
      interval: 10s
      timeout: 3s
      retries: 3
      start_period: 10s

  load-balancer:
    image: haproxy:2.8-alpine
    container_name: load-balancer
    volumes:
      - ./configs/haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
    depends_on:
      - web-server-1
      - web-server-2
    networks:
      - app-net
    ports:
      - "8080:80"
      - "8404:8404"

  netdata:
    image: netdata/netdata
    container_name: netdata
    restart: unless-stopped
    ports:
      - "19999:19999"
    cap_add:
      - SYS_PTRACE
    security_opt:
      - apparmor:unconfined
    networks:
      - app-net

networks:
  app-net:
    driver: bridge

volumes: {}

